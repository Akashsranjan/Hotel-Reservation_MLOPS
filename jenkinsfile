pipeline {
    agent any

    stages {
        stage('Cloning Github repo to Jenkins') {
            steps {
                echo 'Cloning Github repo to Jenkins............'

                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/Akashsranjan/Hotel-Reservation_MLOPS.git',
                        credentialsId: 'github-token'
                    ]]
                ])
            }
        }
    }
}
